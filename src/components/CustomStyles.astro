---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(176, 168, 139);
    --aw-color-secondary: rgb(94, 99, 44);
    --aw-color-accent: rgb(77, 57, 43);

    --aw-color-text-heading: rgb(53, 46, 39);
    --aw-color-text-default: rgb(53, 46, 39);
    --aw-color-text-muted: rgb(128, 128, 128);

    --aw-color-bg-page-primary: rgb(248, 248, 242);
    --aw-color-bg-page-secondary: RGB(240, 230, 220);
    --aw-color-bg-page-third: RGB(219, 226, 210);

    --aw-color-bg-page-primary-dark: RGB(30, 35, 0);
    --aw-color-bg-page-secondary-dark: RGB(20, 25, 0);
    --aw-color-bg-page-third-dark: RGB(10, 15, 0);

    ::selection {
      background-color: RGB(173, 216, 230);
      color: RGB(25, 25, 112);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: RGB(54, 61, 35);
    --aw-color-secondary: RGB(94, 99, 44);
    --aw-color-accent: RGB(90, 62, 54);

    --aw-color-text-heading: RGB(242, 239, 233);
    --aw-color-text-default: RGB(242, 239, 233);
    --aw-color-text-muted: rgb(128, 128, 128);
    --aw-color-bg-page-primary: var(--aw-color-bg-page-primary-dark);
    --aw-color-bg-page-secondary: var(--aw-color-bg-page-secondary-dark);
    --aw-color-bg-page-third: var(--aw-color-bg-page-third-dark);

    ::selection {
      background-color: RGB(25, 25, 112);
      color: RGB(173, 216, 230);
    }
  }
</style>
