---
import Image from '../common/Image.astro';
import { Icon } from 'astro-icon/components';
import type { PersonalProject } from '~/projects';

const { title, description, image, technologies, link } = Astro.props as PersonalProject;
---

<div class="flex flex-col gap-1 text-start p-4 rounded-md bg-light dark:bg-dark z-20">
  <Image
    class="rounded-xl bg-gray-500 shadow-lg z-10"
    widths={[300, 500]}
    layout="responsive"
    src={image}
    alt={'Brandin'}
  />
  <div class="flex justify-between">
    <h2 class="font-bold font-heading leading-tighter leading-tighter tracking-tighter text-heading text-xl">
      {title}
    </h2>
    {
      link && (
        <a
          href={link}
          class="rounded-sm px-1 flex items-center gap-x-0.5 text-sm text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out"
        >
          <Icon name="tabler:link" class="w-4 h-4" /> <span>Project Link</span>
        </a>
      )
    }
  </div>

  <span class="font-medium font-heading leading-tighter leading-tighter tracking-tighter text-md">
    {description}
  </span>
  <div class="flex text-sm gap-1 flex-wrap font-medium">
    {
      technologies.map(({ name, icon }) => (
        <div class="bg-primary rounded-sm px-1 flex gap-x-0.5 items-center">
          {icon && <Icon name={icon} class="w-4 h-4" />}
          <span>{name}</span>
        </div>
      ))
    }
  </div>
</div>
