---
import { Icon } from 'astro-icon/components';
import type { ProfessionalProject } from '~/projects';

const { title, description, technologies } = Astro.props as ProfessionalProject;
---

<div class="flex flex-col gap-1 text-start p-4 rounded-md bg-primary z-20">
  <h2 class="font-bold font-heading leading-tighter leading-tighter tracking-tighter text-heading text-xl">
    {title}
  </h2>
  <span class="font-medium font-heading leading-tighter leading-tighter tracking-tighter text-md">
    {description}
  </span>
  <div class="flex text-sm gap-1 flex-wrap font-medium">
    {
      technologies.map(({ name, icon }) => (
        <div class="bg-light dark:bg-dark rounded-sm px-1 flex gap-x-0.5 items-center">
          {icon && <Icon name={icon} class="w-4 h-4" />}
          <span>{name}</span>
        </div>
      ))
    }
  </div>
</div>
